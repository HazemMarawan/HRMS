@{
    ViewBag.Title = "Permission List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="manage_PermissionList_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <input type="hidden" name="id" id="id" value="0" />
                            <div class="form-group col-md-6">
                                <label>Date</label>
                                <input required name="date" id="date" type="datetime-local" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Duration</label>
                                <select required name="minutes" id="minutes" type="datetime-local" class="form-control radius-30">
                                    <option value="15">15 Minute</option>
                                    <option value="30">30 Minute</option>
                                    <option value="60">1 Hour</option>
                                    <option value="90">1 Hour and 30 Minute</option>
                                    <option value="120">2 Hours</option>
                                </select>
                            </div>
                            <div class="form-group col-md-12">
                                <label>Reason</label>
                                <textarea required name="reason" id="reason" class="form-control radius-30"> </textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            @if ((ViewBag.branchId != null && HRMS.Auth.isA.SuperAdmin()) || HRMS.Auth.isA.BranchAdmin())
            {
                <li class="breadcrumb-item"><a href="@Url.Action("Show","Branch")">Branches</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Details","Branch",new { id = ViewBag.branchId})">@ViewBag.branchName</a></li>
            }
            else if (HRMS.Auth.isA.TeamLeader() || HRMS.Auth.isA.TechnicalManager())
            {
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i></a></li>
            }
            <li class="breadcrumb-item active" aria-current="page" style="font-weight:bold;">Permissions</li>

        </ol>
    </nav>
</div>
<div class="row">
    <div class="form-group col-4">
        <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
    </div>
    <div class="form-group col-2">
        <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
    </div>
    <div class="form-group col-2">
        <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
    </div>

</div>
@section css{
    <style>
        .counter {
            background-color: #FFFFFF;
            padding: 20px 0;
            border-radius: 5px;
        }

        .count-title {
            font-size: 40px;
            font-weight: normal;
            margin-top: 10px;
            margin-bottom: 0;
            text-align: center;
        }

        .count-text {
            font-size: 13px;
            font-weight: normal;
            margin-top: 10px;
            margin-bottom: 0;
            text-align: center;
        }

        .fa-2x {
            margin: 0 auto;
            float: none;
            display: table;
            color: #4ad1e5;
        }
    </style>
}
@if (false)
{
    <div class="row text-center mb-2">
        <div class="col-3" style="border-radius: 25px;">
            <div class="counter">
                <h3 id="total">0</h3>
                <p style="font-weight:bold;"><i class="fa fa-plus"></i> Total Permissions</p>
            </div>
        </div>
        <div class="col-3" style="border-radius: 25px;">
            <div class="counter">
                <h3 id="approved">0</h3>
                <p style="font-weight:bold;"><i class="fa fa-plus"></i> Approved Permissions</p>
            </div>
        </div>
        <div class="col-3" style="border-radius: 25px;">
            <div class="counter">
                <h3 id="un_completed">0</h3>
                <p style="font-weight:bold;"><i class="fa fa-plus"></i> Un Completed Permissions</p>
            </div>
        </div>

        <div class="col-3" style="border-radius: 25px;">
            <div class="counter">
                <h3 id="rejected">0</h3>
                <p style="font-weight:bold;"><i class="fa fa-plus"></i> Rejected Permissions</p>
            </div>
        </div>

    </div>

}

<div class="card">
    <div class="card-header">
        <b>@ViewBag.branchName  Permissions</b>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="PermissionListTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Duration</th>
                        <th>Status</th>
                        @*<th>Active</th>*@
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>

