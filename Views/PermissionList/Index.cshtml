                                    console.log(oData.status)
                                    if (oData.status == 6)
                                        html += "<span class='badge badge-info'>Pending Approve</span>";
                                    else if (oData.status == 3) {
                                        html += "<span class='badge badge-success'>Approved By: " + oData.branch_admin_name + " At " + fixDate(oData.approved_by_branch_admin_at) + "</span>";
                                    }
                                    else if (oData.status == 4) {
                                        html += "<span class='badge badge-success'>Approved By: " + oData.branch_admin_name + " At " + fixDate(oData.approved_by_branch_admin_at) + "</span><br/>";
                                        html += "<span class='badge badge-success'>Approved By: " + oData.super_admin_name + " At " + fixDate(oData.approved_by_super_admin_at) + "</span>";
                                    }
                                    else if (oData.status == 5)
                                        html += "<span class='badge badge-danger'>Rejected By" + oData.rejected_by_name + " At " + fixDate(oData.rejected_by_at) + "</span>";
                                    else
                                        html += "-";
                                }
                                else if (oData.type == 2) { //branch admin
                                    if (oData.status == 3)
                                        html += "<span class='badge badge-info'>Pending Approve</span>";
                                    else if (oData.status == 4) {
                                        html += "<span class='badge badge-success'>Approved By: " + oData.super_admin_name + " At " + fixDate(oData.approved_by_super_admin_at) + "</span>";
                                    }
                                    else if (oData.status == 5)
                                        html += "<span class='badge badge-danger'>Rejected By" + oData.rejected_by_name + " At " + fixDate(oData.rejected_by_at) + "</span>";
                                    else
                                        html += "-";
                                }
                                else {
                                    html += "-";
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        //{
                        //    "data": "active", "searchable": true,
                        //    fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                        //        var html = "";
                        //        if (oData.active == 1)
                        //            html += "<span class='badge badge-primary'>Active</span>";
                        //        else
                        //            html += "<span class='badge badge-danger'>Not Active</span>";
                        //        $(nTd).html("<span class='action-column'>" + html + "</span>");
                        //    }
                        //},
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                //accepted or rejected
                                if (oData.status != 4 || oData.status != 5) {
                                    html += "<a class='accept' href='javascript:void(0)' title='Accept'><i class='fa fa-check'></i></a>&nbsp;";
                                    html += "<a class='reject' href='javascript:void(0)' title='Reject'><i class='fa fa-times'></i></a>";
                                }

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
               });

           datatable.on('xhr.dt', function (e, settings, json, xhr) {
               console.log(json);

               $("#total").text(json.totalPermissions);
               $("#approved").text(json.approvedPermissions);
               $("#un_completed").text(json.unCompletedPermissions);
               $("#rejected").text(json.rejectedPermissions);


           });

            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search_button').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");

                $('#search').trigger('click');

            });

           $(document).on("click", ".accept", function () {
                var data = datatable.row($(this).closest('tr')).data();
                warningBox("Are you sure you want to accept this Permission to (<b>" + data.full_name +"</b>) ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("actionToPermission", "PermissionList")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.id, status: 1 },
                        datatype: "json",
                        success: function (data) {
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
           });
           $(document).on("click", ".reject", function () {
               var data = datatable.row($(this).closest('tr')).data();
               warningBox("Are you sure you want to reject this Permission to (<b>" + data.full_name + "</b>) ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("actionToPermission", "PermissionList")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.id, status: 2},
                        datatype: "json",
                        success: function (data) {
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });

           $("#add_PermissionList").click(function () {
                var modal = $('#manage_PermissionList_modal').clone();
                var action = '@Url.Action("savePermissionList", "PermissionList")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Request Permission');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                    if (response.message == 'faild') {
                        Swal.fire(
                            'Sorry! Reach Limit Permitted.',
                            'You have Only Two Permissions in Month.',
                            'error'
                        );

                    }else
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {


                });
            });

            $(document).on("click", ".edit", function () {
                var data = datatable.row($(this).closest('tr')).data();
                console.log(data);
                var modal = $('#manage_PermissionList_modal').clone();
                var action = '@Url.Action("savePermissionList", "PermissionList")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Edit Requested Permission');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {
                    console.log(fixDateTimeLocal(data.date));

                        dialog.find('#id').val(data.id);
                        dialog.find('#reason').text(data.reason);
                        dialog.find('#date').val(fixDateTimeLocal(data.date));
                        dialog.find('#minutes option[value=' + data.minutes + ']').attr('selected', 'selected');

                });

            });

           $(document).on("click", ".add_project", function () {
                    var data = datatable.row($(this).closest('tr')).data();
               var modal = $('#manage_PermissionList_project_modal').clone();
                    var action = '@Url.Action("savePermissionListProject", "PermissionList")';
                    modal.find('form').attr('action', action);
                    modal.find('#modal_title').text('Add Project');
                    modal.execModal({
                        progressBar: 'progress_bar',
                        progressText: 'progress_text',
                    }, function (response) {
                            datatable.draw();

                    }, function (response) {

                    }, function (dialog) {
                            var html = "<option value=''>Select Project</option>";
                        $.ajax({
                            type: "GET",
                            url: '@Url.Action("getProjects", "PermissionList")',
                            contentType: "application/json; charset=utf-8",
                            data: { "id": data.id },
                            datatype: "json",
                            success: function (data) {
                                datatable.draw();
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                            }
                        });
                            dialog.find("#PermissionList_id").val(data.id);
                    });

                });

            $(document).on("click", ".delete", function () {
                var data = datatable.row($(this).closest('tr')).data();
                warningBox("Are you sure you want to delete this PermissionList (<b>" + data.name +"</b>) ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("deletePermissionList", "PermissionList")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.id },
                        datatype: "json",
                        success: function (data) {
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });

        });

    </script>
}

