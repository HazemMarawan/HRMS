
@{
    ViewBag.Title = "Employee Productivity";
}
@section css{
}
<div class="modal fade" id="manage_productivity_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <input type="hidden" name="id" id="id" value="0" />
                            <div class="form-group col-md-4">
                                <label>Project</label>
                                @Html.DropDownList("project_id", new SelectList(ViewBag.Projects, "id", "name"), "Select Project", new { @class = "form-control", @name = "project_id", @style = "width:100%", @id = "project_id", @required = "@required" })
                            </div>
                            <div class="form-group col-md-4">
                                <label>Area</label>
                                <select class="form-control" id="area_id" name="area_id" required>
                                    <option value="">Select Area</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Working Date</label>
                                <input required name="working_date" id="working_date" type="date" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Number Of Hours</label>
                                <input required name="no_of_numbers" id="no_of_numbers" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Type</label>
                                <select class="form-control" name="productivity_type">
                                    <option value="1">Normal</option>
                                    <option value="2">OverTime</option>
                                    <option value="3">Compensation</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Work Place</label>
                                <select class="form-control" name="productivity_type">
                                    <option value="1">From Home</option>
                                    <option selected value="2">Office</option>
                                </select>
                            </div>
                            @*<div class="form-group col-md-4">
                                    <label>Part ID</label>
                                    <input name="part_id" id="part_id" type="text" class="form-control radius-30" />
                                </div>*@
                            <div class="form-group col-md-4">
                                <label>Part ID</label>
                                <select class="form-control" id="part_id_fk" name="part_id_fk" required>
                                    <option value="">Select Part</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Task</label>
                                @Html.DropDownList("task_id", new SelectList(ViewBag.Tasks, "id", "name"), "Select Task", new { @class = "form-control", @name = "task_id", @style = "width:100%", @id = "task_id", @required = "@required" })
                            </div>
                            <div class="form-group col-md-4">
                                <label>Equipment Quantity</label>
                                <input name="equipment_quantity" id="equipment_quantity" step=".01" type="number" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>MVOH</label>
                                <input name="mvoh" id="mvoh" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>LVOH</label>
                                <input name="lvoh" id="lvoh" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>MVUG</label>
                                <input name="mvug" id="mvug" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>LVUG</label>
                                <input name="lvug" id="lvug" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Sub Station</label>
                                <input name="substation" id="substation" type="number" step=".01" class="form-control radius-30" />
                            </div>

                            <div class="form-group col-md-4">
                                <label>Transformer</label>
                                <input name="transformer" id="transformer" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Pole</label>
                                <input name="pole" id="pole" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Meter</label>
                                <input name="meter" id="meter" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Distribution Box</label>
                                <input name="distribution_box" id="distribution_box" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>RMU</label>
                                <input name="rmu" id="rmu" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Switch</label>
                                <input name="switchh" id="switchh" type="number" step=".01" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-12">
                                <label>Task Description</label>
                                <textarea id="note" name="note" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="modal fade" id="manage_info_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <textarea id="note" name="note" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
