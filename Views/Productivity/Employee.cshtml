
@{
    ViewBag.Title = "Employee Productivity";
}
<div class="modal fade" id="manage_productivity_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <input type="hidden" name="id" id="id" value="0" />
                            <div class="form-group col-md-4">
                                <label>Project</label>
                                @Html.DropDownList("project_id", new SelectList(ViewBag.Projects, "id", "name"), "Select Project", new { @class = "form-control", @name = "project_id", @style = "width:100%", @id = "project_id", @required = "@required" })
                            </div>
                            <div class="form-group col-md-4">
                                <label>Area</label>
                                <select class="form-control" id="area_id" name="area_id" required>
                                    <option value="">Select Area</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Working Date</label>
                                <input required name="working_date" id="working_date" type="date" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Number Of Hours</label>
                                <input required name="no_of_numbers" id="no_of_numbers" type="number" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Type</label>
                                <select class="form-control" name="productivity_type">
                                    <option value="">Select Type</option>
                                    <option value="1">Normal</option>
                                    <option value="2">OverTime</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Work Place</label>
                                <select class="form-control" name="productivity_type">
                                    <option value="">Select Work Place</option>
                                    <option value="1">From Home</option>
                                    <option value="2">Office</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Part ID</label>
                                <input name="part_id" id="part_id" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Equipment Quantity</label>
                                <input name="equipment_quantity" id="equipment_quantity" step=".1" type="number" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>MVOH</label>
                                <input name="mvoh" id="mvoh" type="number" step=".1" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>LVOH</label>
                                <input name="lvoh" id="lvoh" type="number" step=".1" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>MVUG</label>
                                <input name="mvug" id="mvug" type="number" step=".1" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>LVUG</label>
                                <input name="lvug" id="lvug" type="number" step=".1" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-4">
                                <label>Note</label>
                                <input name="note" id="note" type="text" class="form-control radius-30" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="row">
    <div class="form-group col-4">
        <input class="form-control" type="date" id="from_date" name="from_date">
    </div>
    <div class="form-group col-4">
        <input class="form-control" type="date" id="to_date" name="to_date">
    </div>
    <div class="form-group col-4">
        <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
    </div>
    <div class="form-group col-2">
        <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
    </div>
    <div class="form-group col-2">
        <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
    </div>

</div>

<div class="card">
    <div class="card-header">
        <a href="javascript:void(0)" id="add_productivity"><i class="fa fa-plus"></i> Add Productivity</a>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="productivityTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Working Date</th>
                        <th>Project</th>
                        <th>Area</th>
                        <th>Hours</th>
                        <th>Info</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script>
       $(document).ready(function () {

           var datatable = $('#productivityTable')
               .DataTable({/* we added this from the other system to have same search and same pagination*/
                   "dom": "<'dt--top-section '<'row'<'col-sm-12 col-md-6 d-flex justify-content-md-start justify-content-center'B><'col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-center mt-md-0 mt-3'f>>>" +
                       "<'table-responsive  'tr>" +
                       "<'dt--bottom-section d-sm-flex justify-content-sm-between text-center'<'dt--pages-count  mb-sm-0 mb-3'i><'dt--pagination'p>>",
                   "buttons": {
                       buttons: [
                           { extend: 'copy', className: 'btn btn-sm' },
                           { extend: 'csv', className: 'btn btn-sm' },
                           { extend: 'excel', className: 'btn btn-sm' },
                           { extend: 'print', className: 'btn btn-sm' }
                       ]
                   },
                   "oLanguage": {
                       "oPaginate": { "sPrevious": 'Perivous', "sNext": 'Next' },
                       "sInfo": "Showing page _PAGE_ of _PAGES_",
                       "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                       "sSearchPlaceholder": "Search...",
                       "sLengthMenu": "Results :  _MENU_",
                   },
                    "processing": true,
                    "serverSide": true,
                   "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Employee", "Productivity")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "working_date", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='action-column'>" + fixDate(oData.working_date) + "</span>");
                            }
                        },
                        {
                            "data": "project_name",
                            "searchable": true
                        },
                        {
                            "data": "area_name",
                            "searchable": true
                        },
                        {
                            "data": "no_of_numbers",
                            "searchable": true
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if(oData.productivity_type)
                                {
                                    html += "<b>Productivity Type: </b>";
                                    if (oData.productivity_type == 1)
                                        html += "Normal";
                                    else
                                        html += "Over Time";
                                    html += "<br>";
                                }

                                if (oData.productivity_work_place) {
                                    html += "<b>Work Place: </b>";
                                    if (oData.productivity_work_place == 1)
                                        html += "From Home";
                                    else
                                        html += "Office";
                                    html += "<br>";
                                }

                                if (oData.part_id)
                                    html += "<b>Part ID: </b>" + oData.part_id+"<br>";

                                if (oData.equipment_quantity)
                                    html += "<b>Equipment Quantity</b>: " + oData.equipment_quantity + "<br>";
                                if (oData.mvoh)
                                    html += "<b>MVOH: </b>" + oData.mvoh + "<br>";
                                if (oData.lvoh)
                                    html += "<b>LVOH: </b>" + oData.lvoh + "<br>";
                                if (oData.mvug)
                                    html += "<b>MVUG: </b>" + oData.mvug + "<br>";
                                if (oData.lvug)
                                    html += "<b>LVUG: </b>" + oData.lvug + "<br>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "status", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                var isTechnicalManager = '@HRMS.Auth.isA.TechnicalManager()';
                                var isTeamLeader = '@HRMS.Auth.isA.TeamLeader()';
                                var isEmployee = '@HRMS.Auth.isA.Employee()';
                                if (oData.status == 1) {
                                    if (isEmployee == 'True')
                                        html = `<span class="badge badge-primary">Pending Team Leader Approve</span>`;
                                    else if (isTeamLeader == 'True')
                                        html = `<span class="badge badge-primary">Pending Technical Manager Approve</span>`;
                                }
                                else if (oData.status == 2) {
                                    html = `<span class="badge badge-success">Approved</span>`;
                                }
                                else {
                                    html = `<span class="badge badge-danger">Rejected</span>`;
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                var isTechnicalManager = '@HRMS.Auth.isA.TechnicalManager()';
                                if (oData.status == 1 || isTechnicalManager == 'True') {
                                    html += "<a class='edit' href='javascript:void(0)' title='Edit'><i class='far fa-edit'></i></a>&nbsp;";
                                    html += "<a class='delete' href='javascript:void(0)' title='Delete'><i class='fas fa-trash'></i></a>";
                                }
                                else
                                    html = "-";
                                    $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
                 });

           $('#search').on('click', function () {
               datatable.search($("#text_search").val());
               datatable.columns(0).search($("#from_date").val());
               datatable.columns(1).search($("#to_date").val());
               datatable.draw();
           });

           $('#text_search').on('keyup', function (e) {
               if (e.keyCode == 13)
                   $('#search_button').trigger('click');
           });

           $('#reset').on('click', function () {
               $("#text_search").val("");
               $("#from_date").val("");
               $("#to_date").val("");
               $('#search').trigger('click');

           });

           $("#add_productivity").click(function () {
               var modal = $('#manage_productivity_modal').clone();
                var action = '@Url.Action("saveProductivity", "Productivity")';
                modal.find('form').attr('action', action);
               modal.find('#modal_title').text('Add Productivity');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {

                        datatable.draw();

                }, function (response) {

                }, function (dialog) {

                        $(document).on("change", "#project_id", function () {
                            var project_id = $(this).val();
                            dialog.find("#area_id").empty();
                            var html = `<option value=''>Select Area</option>`;
                            $.ajax({
                            type: "GET",
                            url: '@Url.Action("getAreaByProjectId", "Project")',
                            contentType: "application/json; charset=utf-8",
                            data: { "id": project_id },
                            datatype: "json",
                                success: function (data) {
                                    if (data.areas.length != 0) {

                                    data.areas.forEach(function (value) {
                                        html += `<option value='${value.id}'>${value.name}</option>`;
                                    });

                                    }
                                    dialog.find("#area_id").append(html);
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                            }
                        });

                        });
                });
            });

            $(document).on("click", ".edit", function () {
                var data = datatable.row($(this).closest('tr')).data();
                console.log(data);
                var modal = $('#manage_productivity_modal').clone();
                var action = '@Url.Action("saveProductivity", "Productivity")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Edit Productivity');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {

                        dialog.find('#id').val(data.id);
                        dialog.find('#no_of_numbers').val(data.no_of_numbers);
                        dialog.find('#working_date').val(fixDate(data.working_date));
                        dialog.find('#project_id option[value=' + data.project_id + ']').attr('selected', 'selected');
                        dialog.find('#productivity_type option[value=' + data.productivity_type + ']').attr('selected', 'selected');
                        dialog.find('#productivity_work_place option[value=' + data.productivity_work_place + ']').attr('selected', 'selected');
                        dialog.find('#part_id').val(data.part_id);
                        dialog.find('#equipment_quantity').val(data.equipment_quantity);
                        dialog.find('#mvoh').val(data.mvoh);
                        dialog.find('#lvoh').val(data.lvoh);
                        dialog.find('#mvug').val(data.mvug);
                        dialog.find('#lvug').val(data.lvug);
                        dialog.find('#note').val(data.note);

                            var project_id = data.project_id;
                            dialog.find("#area_id").empty();
                            var html = `<option value=''>Select Area</option>`;
                            $.ajax({
                            type: "GET",
                            url: '@Url.Action("getAreaByProjectId", "Project")',
                            contentType: "application/json; charset=utf-8",
                            data: { "id": project_id },
                            datatype: "json",
                                success: function (data) {
                                    if (data.areas.length != 0) {

                                        data.areas.forEach(function (value) {
                                        if(parseInt(data.area_id) == parseInt(value.id))
                                            html += `<option selected value='${value.id}'>${value.name}</option>`;
                                        else
                                            html += `<option value='${value.id}'>${value.name}</option>`;

                                    });

                                    }
                                    dialog.find("#area_id").append(html);
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                            }
                        });

                        $(document).on("change", "#project_id", function () {
                            var project_id = $(this).val();
                            dialog.find("#area_id").empty();
                            var html = `<option value=''>Select Area</option>`;
                            $.ajax({
                            type: "GET",
                            url: '@Url.Action("getAreaByProjectId", "Project")',
                            contentType: "application/json; charset=utf-8",
                            data: { "id": project_id },
                            datatype: "json",
                                success: function (data) {
                                    if (data.areas.length != 0) {

                                    data.areas.forEach(function (value) {
                                        html += `<option value='${value.id}'>${value.name}</option>`;
                                    });

                                    }
                                    dialog.find("#area_id").append(html);
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                            }
                        });

                        });
                });

            });

            $(document).on("click", ".delete", function () {
                var data = datatable.row($(this).closest('tr')).data();
                warningBox("Are you sure you want to delete this Project (<b>" + data.project_name +"</b>) ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("deleteProductivity", "Productivity")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.id },
                        datatype: "json",
                        success: function (data) {
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });

        });

    </script>
}


