<div class="row">
    <div class="form-group col-4">
        <input class="form-control" type="date" id="from_date" name="from_date">
    </div>
    <div class="form-group col-4">
        <input class="form-control" type="date" id="to_date" name="to_date">
    </div>
    <div class="form-group col-4">
        <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
    </div>
    <div class="form-group col-2">
        <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
    </div>
    <div class="form-group col-2">
        <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
    </div>

</div>

<div class="card">
    <div class="card-header">
        <a href="javascript:void(0)" id="add_productivity"><i class="fa fa-plus"></i> Add Productivity</a>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="productivityTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Working Date</th>
                        <th>Location</th>
                        <th>Info</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script>
       $(document).ready(function () {




           var datatable = $('#productivityTable')
               .DataTable({/* we added this from the other system to have same search and same pagination*/
                   "dom": "<'dt--top-section '<'row'<'col-sm-12 col-md-6 d-flex justify-content-md-start justify-content-center'B><'col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-center mt-md-0 mt-3'f>>>" +
                       "<'table-responsive  'tr>" +
                       "<'dt--bottom-section d-sm-flex justify-content-sm-between text-center'<'dt--pages-count  mb-sm-0 mb-3'i><'dt--pagination'p>>",
                   "buttons": {
                       buttons: [
                           { extend: 'copy', className: 'btn btn-sm' },
                           { extend: 'csv', className: 'btn btn-sm' },
                           { extend: 'excel', className: 'btn btn-sm' },
                           { extend: 'print', className: 'btn btn-sm' }
                       ]
                   },
                   "oLanguage": {
                       "oPaginate": { "sPrevious": 'Perivous', "sNext": 'Next' },
                       "sInfo": "Showing page _PAGE_ of _PAGES_",
                       "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                       "sSearchPlaceholder": "Search...",
                       "sLengthMenu": "Results :  _MENU_",
                   },
                    "processing": true,
                    "serverSide": true,
                   "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Employee", "Productivity")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "id",
                            "searchable": true
                        },
                        {
                            "data": "working_date", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='action-column'>" + fixDate(oData.working_date) + "</span>");
                            }
                        },
                        {
                            "data": "project_name", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = '';
                                if (oData.project_name)
                                    html += "<b>Project: </b>" + oData.project_name + "<br>";
                                if (oData.area_name)
                                    html += "<b>Area: </b>" + oData.area_name + "<br>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if(oData.productivity_type)
                                {
                                    html += "<b>Productivity Type: </b>";
                                    if (oData.productivity_type == 1)
                                        html += "Normal";
                                    else if (oData.productivity_type == 2)
                                        html += "Over Time";
                                    else
                                        html += "Compensation";
                                    html += "<br>";
                                }

                                if (oData.productivity_work_place) {
                                    html += "<b>Work Place: </b>";
                                    if (oData.productivity_work_place == 1)
                                        html += "From Home";
                                    else
                                        html += "Office";
                                    html += "<br>";
                                }

                                if (oData.part_id)
                                    html += "<b>Part ID: </b>" + oData.part_id + "<br>";
                                else if (oData.part_id_fk)
                                    html += "<b>Part ID: </b>" + oData.part_name + "<br>";

                                if (oData.task_id)
                                    html += "<b>Task: </b>" + oData.task_name + "<br>";
                                if (oData.equipment_quantity)
                                    html += "<b>Equipment Quantity</b>: " + oData.equipment_quantity + "<br>";

                                if (oData.substation) {
                                    html += "<b>Sub Station: </b>" + oData.substation + "<br>";
                                }

                                if (oData.no_of_numbers) {
                                    html += "<b>Hours: </b>" + oData.no_of_numbers + "<br>";
                                }

                                if (oData.mvoh) {
                                    if (oData.mvoh >= oData.mvoh_target)
                                        html += "<span class='badge badge-success'><b>MVOH: </b>" + oData.mvoh + "</span><br>";
                                    else
                                        html += "<span class='badge badge-danger'><b>MVOH: </b>" + oData.mvoh + "</span><br>";
                                }

                                if (oData.lvoh) {
                                    if (oData.lvoh >= oData.lvoh_target)
                                        html += "<span class='badge badge-success'><b>LVOH: </b>" + oData.lvoh + "</span><br>";
                                    else
                                        html += "<span class='badge badge-danger'><b>LVOH: </b>" + oData.lvoh + "</span><br>";
                                }

                                if (oData.mvug) {
                                    if (oData.mvug >= oData.mvug_target)
                                        html += "<span class='badge badge-success'><b>MVUG: </b>" + oData.mvug + "</span><br>";
                                    else
                                        html += "<span class='badge badge-danger'><b>MVUG: </b>" + oData.mvug + "</span><br>";
                                }

                                if (oData.lvug) {
                                    if (oData.lvug >= oData.lvug_target)
                                        html += "<span class='badge badge-success'><b>LVUG: </b>" + oData.lvug + "</span><br>";
                                    else
                                        html += "<span class='badge badge-danger'><b>LVUG: </b>" + oData.lvug + "</span><br>";
                                }

                                //new
                                if (oData.transformer) {
                                    html += "<span class='badge badge-success'><b>Transformer: </b>" + oData.transformer + "</span><br>";
                                }

                                if (oData.pole) {
                                    html += "<span class='badge badge-success'><b>Pole: </b>" + oData.pole + "</span><br>";
                                }

                                if (oData.meter) {
                                    html += "<span class='badge badge-success'><b>Meter: </b>" + oData.meter + "</span><br>";
                                }

                                if (oData.distribution_box) {
                                    html += "<span class='badge badge-success'><b>Distribution Box: </b>" + oData.distribution_box + "</span><br>";
                                }

                                if (oData.rmu) {
                                    html += "<span class='badge badge-success'><b>RMU: </b>" + oData.rmu + "</span><br>";
                                }

                                if (oData.switchh) {
                                    html += "<span class='badge badge-success'><b>Switch: </b>" + oData.switchh + "</span><br>";
                                }


                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "status", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                var isSupervisor = '@HRMS.Auth.isA.Supervisor()';
                                var isTeamLeader = '@HRMS.Auth.isA.TeamLeader()';
                                var isEmployee = '@HRMS.Auth.isA.Employee()';
                                if (oData.status == 1) {
                                    if (isEmployee == 'True')
                                        html = `<span class="badge badge-primary">Pending Team Leader Approve</span>`;
                                    else if (isTeamLeader == 'True')
                                        html = `<span class="badge badge-primary">Pending Supervisor Approve</span>`;
                                }
                                else if (oData.status == 2) {
                                    html = `<span class="badge badge-success">Approved</span>`;
                                }
                                else if (oData.status == 4) {
                                    html = `<span class="badge badge-warning">Returned by ${oData.returned_by_name} At ${fixDate(oData.returned_at)}<br/>
                                             Reason: ${oData.rejected_by_note}</span>`;
                                }
                                else {
                                    html = `<span class="badge badge-danger">Rejected</span>`;
                                }
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                var isSupervisor = '@HRMS.Auth.isA.Supervisor()';
                                if (oData.status == 1 || oData.status == 4 || isSupervisor == 'True') {
                                    html += "<a class='edit' href='javascript:void(0)' title='Edit'><i class='far fa-edit'></i></a>&nbsp;";
                                    html += "<a class='delete' href='javascript:void(0)' title='Delete'><i class='fas fa-trash'></i></a>&nbsp;";
                                    html += "<a class='info' href='javascript:void(0)' title='Information'><i class='fas fa-info-circle'></i></a>";

                                }
                                else
                                    html = "-";
                                    $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
                 });

           $('#search').on('click', function () {
               datatable.search($("#text_search").val());
               datatable.columns(0).search($("#from_date").val());
               datatable.columns(1).search($("#to_date").val());
               datatable.draw();
           });

           $('#text_search').on('keyup', function (e) {
               if (e.keyCode == 13)
                   $('#search_button').trigger('click');
           });

           $('#reset').on('click', function () {
               $("#text_search").val("");
               $("#from_date").val("");
               $("#to_date").val("");
               $('#search').trigger('click');

           });

           $("#add_productivity").click(function () {
               var modal = $('#manage_productivity_modal').clone();
                var action = '@Url.Action("saveProductivity", "Productivity")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Productivity');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {

                        datatable.draw();

                }, function (response) {

                }, function (dialog) {


                       var serverToday = '@ViewBag.todayDate';
                       var serverYesterday = '@ViewBag.yesterdayDate';

                       var serverTodayYear = serverToday.split(' ')[0].split('/')[2];
                       var serverTodayMonth = serverToday.split(' ')[0].split('/')[1];
                       var serverTodayDay = serverToday.split(' ')[0].split('/')[0];

                        var todayDay = serverTodayDay;
                        var todayMonth = serverTodayMonth;
                        var todayYear = serverTodayYear;

                        var today = todayYear + "-" + todayMonth + "-" + todayDay;

                        
                       //var todayDate = new Date(serverTodayYear, serverTodayMonth, serverTodayDay);

                       var serverYesterdayYear = serverYesterday.split(' ')[0].split('/')[2];
                       var serverYesterdayMonth = serverYesterday.split(' ')[0].split('/')[1];
                       var serverYesterdayDay = serverYesterday.split(' ')[0].split('/')[0];

                        var yesterdayDay = serverYesterdayDay;
                        var yesterdayMonth = serverYesterdayMonth;
                        var yesterdayYear = serverYesterdayYear;

                        var yesterday = yesterdayYear + "-" + yesterdayMonth + "-" + yesterdayDay;

                        console.log(yesterday);
                       //var yesterdayDate = new Date(serverYesterdayYear, serverYesterdayMonth, serverYesterdayDay);

                        //var todayDate = new Date();
                      

                        

                        //var yesterdayDate = new Date(new Date())
                        //yesterdayDate.setDate(yesterdayDate.getDate() - 1);

                       

                        dialog.find("#working_date").attr('min', yesterday);
                        dialog.find("#working_date").attr('max', today);


                        $(document).on("change", "#project_id", function () {
                            var project_id = $(this).val();
                            dialog.find("#area_id").empty();
                            var html = `<option value=''>Select Area</option>`;
                            $.ajax({
                            type: "GET",
                            url: '@Url.Action("getAreaByProjectId", "Project")',
                            contentType: "application/json; charset=utf-8",
                            data: { "id": project_id },
                            datatype: "json",
                                success: function (data) {
                                    if (data.areas.length != 0) {

                                    data.areas.forEach(function (value) {
                                        html += `<option value='${value.id}'>${value.name}</option>`;
                                    });

                                    }
                                    dialog.find("#area_id").append(html);
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                            }
                        });

                        });

                        $(document).on("change", "#area_id", function () {
                            var area_id = $(this).val();
                            dialog.find("#part_id_fk").empty();
                            var html = `<option value=''>Select Part</option>`;
                            $.ajax({
                            type: "GET",
                            url: '@Url.Action("getPartsByAreaId", "Part")',
                            contentType: "application/json; charset=utf-8",
                                data: { "id": area_id },
                            datatype: "json",
                                success: function (data) {
                                    if (data.parts.length != 0) {

                                    data.parts.forEach(function (value) {
                                        html += `<option value='${value.id}'>${value.part}</option>`;
                                    });

                                    }
                                    dialog.find("#part_id_fk").append(html);
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                            }
                        });

                        });
                });
            });

            $(document).on("click", ".edit", function () {
                var data = datatable.row($(this).closest('tr')).data();
                console.log(data);
                var modal = $('#manage_productivity_modal').clone();
                var action = '@Url.Action("saveProductivity", "Productivity")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Edit Productivity');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {

                        dialog.find('#id').val(data.id);
                        dialog.find('#no_of_numbers').val(data.no_of_numbers);
                        dialog.find('#working_date').val(fixDate(data.working_date));
                        dialog.find('#project_id option[value=' + data.project_id + ']').attr('selected', 'selected');
                        dialog.find('#productivity_type option[value=' + data.productivity_type + ']').attr('selected', 'selected');
                        dialog.find('#productivity_work_place option[value=' + data.productivity_work_place + ']').attr('selected', 'selected');
                        //dialog.find('#part_id_fk option[value=' + data.part_id_fk + ']').attr('selected', 'selected');
                        dialog.find('#task_id option[value=' + data.task_id + ']').attr('selected', 'selected');
                        //dialog.find('#part_id').val(data.part_id);
                        dialog.find('#equipment_quantity').val(data.equipment_quantity);
                        dialog.find('#mvoh').val(data.mvoh);
                        dialog.find('#lvoh').val(data.lvoh);
                        dialog.find('#mvug').val(data.mvug);
                        dialog.find('#lvug').val(data.lvug);
                        dialog.find('#substation').val(data.substation);

                        dialog.find('#transformer').val(data.transformer);
                        dialog.find('#pole').val(data.pole);
                        dialog.find('#meter').val(data.meter);
                        dialog.find('#distribution_box').val(data.distribution_box);
                        dialog.find('#rmu').val(data.rmu);
                        dialog.find('#switchh').val(data.switchh);
                        dialog.find('#note').text(data.note);

                        dialog.find('#working_date').attr('readonly', true);

                        var area_id = data.area_id;
                            var project_id = data.project_id;
                            dialog.find("#area_id").empty();
                            var html = `<option value=''>Select Area</option>`;
                            $.ajax({
                            type: "GET",
                            url: '@Url.Action("getAreaByProjectId", "Project")',
                            contentType: "application/json; charset=utf-8",
                            data: { "id": project_id },
                            datatype: "json",
                                success: function (data) {
                                    if (data.areas.length != 0) {

                                        data.areas.forEach(function (value) {
                                            if (parseInt(area_id) == parseInt(value.id))
                                            html += `<option selected value='${value.id}'>${value.name}</option>`;
                                        else
                                            html += `<option value='${value.id}'>${value.name}</option>`;

                                    });

                                    }
                                    dialog.find("#area_id").append(html);
